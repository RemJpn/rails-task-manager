<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h3>
      <%= @task.title %>
    </h3>
    <%= link_to edit_task_path(@task) , class: "btn btn-outline-primary" do %>
      <i class="fas fa-pencil-alt"></i>
      Edit this task
    <% end %>

  </div>


  <p class="alert alert-secondary my-3">
    <%= @task.details %>
  </p>

  <% if @task.completed %>
    <p>
      <i class="far fa-check-square"></i> This task is completed
    </p>
  <% else %>
    <p>
      <i class="far fa-square"></i> This taks is not completed yet
    </p>
  <% end %>

  <hr class="solid">
  <%= link_to tasks_path do %>
    <i class="fas fa-arrow-circle-left"></i>
    Back to list
  <% end %>

</div>

