<div class="container">
  <h1>All your Tasks</h1>
  <h5>Get to work!</h5>

  <% @tasks.each do |task|%>

    <p>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(id: task.id) %>

      Â·
      <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </p>

  <% end %>

    <hr class="solid">

    <%= link_to new_task_path do %>
      <i class="fas fa-plus"></i>
      Add a new task
    <% end %>
</div>
